@section Styles {
	<link rel="stylesheet" href="~/Admin/css/DashboardUser.css" asp-append-version="true" />
}

<div class="modal" id="blockUserModal" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="blockUserTitle">
	<div class="modal__backdrop" data-close-modal></div>
	<div class="modal__dialog modal__dialog--sm" role="document">
		<header class="modal__header">
			<h3 class="modal__title" id="blockUserTitle">Block User</h3>
			<button class="iconbtn" aria-label="Close" type="button" data-close-modal>
				<span class="material-symbols-outlined">close</span>
			</button>
		</header>
		<div class="modal__body">
			<p>Are you sure you want to block <strong id="blockUserName"></strong>?</p>
			<form method="post" style="display:none">
				@Html.AntiForgeryToken()
			</form>
		</div>
		<footer class="modal__footer">
			<button class="um-btn" type="button" data-close-modal>Cancel</button>
			<button class="um-btn um-btn--danger" type="button" data-admin-action="block" data-user-id="">
				<span class="material-symbols-outlined um-btn__icon">block</span>
				<span>Block</span>
			</button>
		</footer>
	</div>
</div>
