                // Local helper: returns " is-active" when current route matches provided area/controller/action
                string Active(string? area, string? controller, string? action = null)
                {
                    var currentArea = (ViewContext.RouteData.Values["area"] as string) ?? string.Empty;
                    var currentController = (ViewContext.RouteData.Values["controller"] as string) ?? string.Empty;
                    var currentAction = (ViewContext.RouteData.Values["action"] as string) ?? string.Empty;

                    bool matches = string.Equals(area ?? string.Empty, currentArea, StringComparison.OrdinalIgnoreCase)
                                    && string.Equals(controller ?? string.Empty, currentController, StringComparison.OrdinalIgnoreCase)
                                    && (action == null || string.Equals(action, currentAction, StringComparison.OrdinalIgnoreCase));

                    return matches ? " is-active" : string.Empty;
                }
            }

