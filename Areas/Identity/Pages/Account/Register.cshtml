@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
}

    <div class="page-root">
        <!-- Background particles -->
        <div class="particles" aria-hidden="true"></div>

        <!-- Content -->
        <div class="form-wrapper">

            <section class="card" role="region" aria-labelledby="register-title">
                <header class="header">
                    <h1>Create Your Account</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                </header>
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data" class="form">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- الصورة -->
                    <div class="upload">
                        <label for="avatar-register" class="avatar-upload" title="Upload avatar">
                            <span class="material-symbols-outlined" aria-hidden="true">cloud_upload</span>
                            <input asp-for="Input.ProfileImage" id="avatar-register" type="file" accept="image/*" hidden />
                        </label>
                        <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
                    </div>

                    <!-- الاسم -->
                    <label class="field">
                        <span class="label">Full Name</span>
                        <input asp-for="Input.FullName" class="input" placeholder="Enter your full name" autocomplete="name" />
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </label>

                    <!-- البريد -->
                    <label class="field">
                        <span class="label">Email Address</span>
                        <input asp-for="Input.Email" class="input" placeholder="Enter your email" autocomplete="email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </label>

                    <!-- الهاتف -->
                    <label class="field">
                        <span class="label">Phone Number</span>
                        <input asp-for="Input.PhoneNumber" class="input" placeholder="0096277xxxxxxx" autocomplete="tel" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </label>

                    <!-- الدولة -->
                    <label class="field">
                        <span class="label">Country</span>
                        <select asp-for="Input.Country" class="input select"
                                asp-items="@(new SelectList(Model.Countries))">
                            <option value="">Select Country</option>
                        </select>
                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                    </label>

                    <!-- كلمة السر -->
                    <label class="field">
                        <span class="label">Password</span>
                        <input asp-for="Input.Password" class="input" type="password" autocomplete="new-password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </label>

                    <!-- تأكيد -->
                    <label class="field">
                        <span class="label">Confirm Password</span>
                        <input asp-for="Input.ConfirmPassword" class="input" type="password" autocomplete="new-password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </label>

                    <div class="agree">
                        <input type="checkbox" id="agreement" required />
                        <label for="agreement">
                            I agree to the <a href="#" class="link">Terms &amp; Conditions</a>
                        </label>
                    </div>

                    <button type="submit" class="buttonss btn--primary">
                        <span>SIGN UP</span>
                    </button>
                </form>
                <p class="footnote">
                    Already have an account?
                    <a asp-page="/Account/Login" class="link">LogIn</a>
                </p>
            </section>

        </div>

@section Scripts {
        <script src="~/js/Register.js" asp-append-version="true"></script>
        <partial name="_ValidationScriptsPartial" />
}
